<!-- clipChildren clipToPadding 不要忘记了，不然移动的边框无法显示出来 --><!-- 不要模仿我使用 margin来定位item，我只是测试适配-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@mipmap/bg_test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_80">

        <TextView
            android:id="@+id/tv_showtime"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2019/05/20 09:59"
            android:layout_centerInParent="true"
            android:textSize="@dimen/w_32"
            android:gravity="center_vertical"
            />

        <ImageView
            android:layout_toLeftOf="@id/tv_showtime"
            android:layout_marginRight="@dimen/h_15"
            android:layout_width="@dimen/w_55"
            android:layout_height="@dimen/h_50"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_wifi">
        </ImageView>

    </RelativeLayout>


</RelativeLayout>