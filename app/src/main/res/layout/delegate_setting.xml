<?xml version="1.0" encoding="utf-8"?><!-- RecyclerView DEMO -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_80"
        android:background="@color/color_cadetblue">

        <TextView
            android:id="@+id/tv_showtime"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2019/05/20 09:59"
            android:layout_centerInParent="true"
            android:textSize="@dimen/w_32"
            android:gravity="center_vertical"
            />

        <ImageView
            android:layout_toLeftOf="@id/tv_showtime"
            android:layout_marginRight="@dimen/h_15"
            android:layout_width="@dimen/w_55"
            android:layout_height="@dimen/h_50"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_wifi">
        </ImageView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/w_200"
            android:layout_height="match_parent">
        <com.open.androidtvwidget.leanback.recycle.RecyclerViewTV
            android:layout_centerVertical="true"
            android:id="@+id/left_menu_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"/>

          <!--  <com.open.androidtvwidget.view.MainUpView
                android:id="@+id/mainUpView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>
    <!-- 最顶层边框 -->

</LinearLayout>